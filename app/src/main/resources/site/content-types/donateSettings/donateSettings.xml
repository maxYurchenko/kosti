<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Donate settings</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="token" type="TextLine">
      <label>Token</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="laravelSession" type="TextLine">
      <label>Laravel session</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="donateTarget" type="ContentSelector">
      <label>Donate target</label>
      <occurrences minimum="0" maximum="10"/>
      <config>
        <allowContentType>donateTarget</allowContentType>
      </config>
    </input>
  </form>
</content-type>