<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Landing</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input type="AttachmentUploader" name="program">
      <label>Program</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="footer" type="ContentSelector">
      <label>Footer</label>
      <occurrences minimum="0" maximum="5"/>
      <config>
      </config>
    </input>
    <item-set name="faq">
      <label>FAQ</label>
      <occurrences minimum="0" maximum="0"/>
      <items>
        <input name="question" type="TextLine">
          <label>Question</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="answer" type="HtmlArea">
          <label>Answer</label>
          <occurrences minimum="1" maximum="1"/>
          <config>
          </config>
        </input>
      </items>
    </item-set>
    <input name="gmRole" type="TextLine">
      <label>Required GM role</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="onlineFestival" type="CheckBox">
      <label>Online festival</label>
      <config>
        <alignment>right</alignment>
      </config>
    </input>
    <input name="gameRegisterOpen" type="CheckBox">
      <label>Game register open</label>
      <config>
        <alignment>right</alignment>
      </config>
    </input>
    <input name="gmRegisterOpen" type="CheckBox">
      <label>GM register open</label>
      <config>
        <alignment>right</alignment>
      </config>
    </input>
    <input name="requireDiscord" type="CheckBox">
      <label>Require discord</label>
      <config>
        <alignment>right</alignment>
      </config>
    </input>
    <input name="players" type="ContentSelector">
      <label>Players</label>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <allowContentType>com.myurchenko.kostirpg:user</allowContentType>
        <allowPath>*</allowPath>
      </config>
    </input>
  </form>
</content-type>