<part>
  <display-name>Info with Image</display-name>
  <form>
    <input name="image" type="ImageSelector">
      <label>Image</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
      </config>
    </input>
    <input name="info" type="HtmlArea">
      <label>Info</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="mirrored" type="CheckBox">
      <label>Mirrored</label>
    </input>
    <input name="background" type="ComboBox">
      <label>Background color</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="m-white">White</option>
        <option value="m-black">Black</option>
        <option value="m-purple">Purple</option>
      </config>
    </input>
  </form>
</part>